html,
body {
	@apply h-full overflow-hidden;
}

body {
	@apply bg-surface-50-900-token;
}

.page-content {
	background-color: rgb(var(--color-surface-50));
}

.input,
.textarea,
.select,
.input-group {
}

.card {
	background-color: rgb(var(--color-surface-50));
}

#page-content .app-bar-row-main {
	gap: 0;

	.btn {
		border: 0;
	}
}

#page-content .app-bar {
	background-color: rgb(var(--color-surface-50));

	.filter-bar {
		button {
			background: transparent;
			padding: 0;
			font-size: 0.8rem;

			&:focus {
				border: 0;
			}
		}
	}
}

.sidebar-left__bottom {
	a {
		padding: 0.5rem;
	}
}

.table {
	border-radius: 0;

	thead {
		/* background-color: #fafafb; */
		th {
			font-weight: 500;
			font-size: 0.8rem;
			padding-left: 0;
		}
	}

	tbody {
		tr {
			/* background-color: #fafafb; */
			&:nth-child(even) {
				/* background-color: #fafafb; */
			}

			&:hover {
				background-color: #eee;
			}

			&:hover:nth-child(even) {
				background-color: #eee;
			}

			td {
				padding-left: 0;
			}
		}
	}
}

.dark {
	body,
	#editorElement,
	input,
	select {
		@apply text-white;
	}

	#page-content .app-bar {
		background-color: rgb(var(--color-surface-900));
	}

	.sidebar-left {
		border-color: rgb(var(--color-surface-500));
	}

	.border-b {
		border-color: rgb(var(--color-surface-500));
	}
}

/* .dark body,
.dark #editorElement,
.dark input {
	@apply text-white;
} */

.autocomplete-list {
	@apply space-y-1;

	button {
		@apply p-1 px-2 w-fit;
	}
}

#sidebar-right select {
	padding-left: 15px !important;
}

.autocomplete {
	button,
	[type='button'],
	[type='reset'],
	[type='submit'] {
		@apply bg-white;
	}
}
